<div class="overflow-x-auto">
    <table class="table">
        <!-- head -->
        <thead>
            <tr>
                <th>ID prijave</th>
                <th>Ime antjecatelja </th>
                <th>Ime natjecanja</th>
                <th>Prijavljen u </th>
                <th>Broj bodova </th>
                <th>Unos bodova</th>
            </tr>
        </thead>
        <!-- body -->
        <tbody>
            {{#each result.items}}
            <tr>
                <th>{{this.id}}</th>
                <td>{{this.natjecatelj}}</td>
                <td>{{this.natjecanje}}</td>

                <td x-data="{}">
                    <span x-text="new Date('{{this.applied_at}}').toLocaleString()"></span>
                </td>
                <td>{{this.score}}</td>
                <td class="flex flex-wrap gap-2">
                    <form method="post" action="/competitions/scoreUpdate/{{this.id}}">
                        <input type="submit" class="btn btn-primary" value="potvrdi" />
                        <input type="text" name="score" placeholder="Unesite broj bodova"
                            class="input input-bordered w-full max-w-xs" />
                        <input type="text" hidden="" name= "competition_id" value="{{this.competition_id}}">
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>